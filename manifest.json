{
    "manifest_version": 2,
    "name": "Image Downloader",
    "version": "1.0",
    "description": "Télécharge l'image actuelle en cliquant sur une icône.",
    "permissions": [
      "activeTab",
      "downloads"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }  